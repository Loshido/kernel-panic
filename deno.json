{
    "unstable": ["kv"],
    "compilerOptions": {
        "lib": [
            "deno.window",
            "deno.unstable",
            "es2022",
            "dom",
            "webworker",
            "dom.iterable"
        ],
        "strict": true
    },
    "tasks": {
        "dev": "deno --watch --allow-net --allow-write --allow-run --allow-ffi --allow-env --allow-read ./src/main.ts dev",
        "setup": "deno -A src/setup.ts",
        "bundle": "deno task bundle-main && deno task bundle-groupe",
        "bundle-groupe": "deno bundle -q --minify --platform browser -o ./public/groupe/main.js ./src/client/groupe/main.ts",
        "bundle-main": "deno bundle -q --minify --platform browser -o ./public/main.js ./src/client/index/main.ts"
    },
    "imports": {
        "@libs/qrcode": "jsr:@libs/qrcode@^3.0.0",
        "argon2": "jsr:@bronti/argon2",
        "sharp": "npm:sharp@^0.34.3",
        "lib/": "./src/lib/",
        "env": "./src/env.ts"
    },
    "fmt": {
        "indentWidth": 4,
        "semiColons": false,
        "useTabs": false,
        "jsx.multiLineParens": "never",
        "jsx.bracketPosition": "maintain",
        "spaceSurroundingProperties": true,
        "singleQuote": true
    },
    "lint": {
        "rules": {
            "exclude": ["no-window", "no-window-prefix", "no-explicit-any"]
        }
    }
}
